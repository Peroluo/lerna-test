{
    "packages": ["packages/*"],
    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
      "publish": {
        "registry": "https://registry.npmjs.org/",
        "conventionalCommits": true,
        "message": "chore(release): publish",
        "ignoreChanges": ["**/stories/**", "**/tests/**", "**/*.md"],
        "allowBranch": "main"
      },
      "version": {
        "ignoreChanges": ["**/stories/**", "**/tests/**", "**/*.md"],
        "allowBranch": ["main"]
      }
    }
  }